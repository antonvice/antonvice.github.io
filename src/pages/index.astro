---
import MainLayout from '../layouts/MainLayout.astro';
import DecryptedText from '../components/DecryptedText';
import LanyardCard from '../components/LanyardCard';
import GlassCard from '../components/GlassCard';

// Skill arrays for mapping
const technicalSkills = [
  'Data Science & Machine Learning',
  'Full-Stack Development',
  'Business Development',
  'Automated Machine Learning (AutoML)',
  'AWS Auto Scaling & Cloud Architecture',
  'Python ML Engineering',
  'Amazon Athena & Big Data'
];

const focusAreas = [
  'Human-AI Symbiosis',
  'Emergent AI Behaviors',
  'Neural Network Architecture',
  'Prompt Engineering & RAGs',
  'Token Manipulation & Fine-tuning',
  'Vector Injections',
  'AI Ethics & Safety'
];
---

<MainLayout title="Anton Vice - AI Whisperer & CTO">
  
  <!-- Hero Section -->
  <main id="main-content" class="min-h-screen pt-16">
    <!-- Hero Section with Lanyard -->
    <section class="min-h-screen flex items-center justify-center relative overflow-hidden py-20">
      <!-- Background Effects -->
      <div class="absolute inset-0 bg-gradient-to-b from-dark via-dark/95 to-dark"></div>
      <div class="absolute inset-0">
        <!-- Grid pattern -->
        <div class="absolute inset-0 opacity-10">
          <svg width="60" height="60" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg">
            <defs>
              <pattern id="grid" width="60" height="60" patternUnits="userSpaceOnUse">
                <path d="M 60 0 L 0 0 0 60" fill="none" stroke="#2be4ea" stroke-width="1"/>
              </pattern>
            </defs>
            <rect width="100%" height="100%" fill="url(#grid)" />
          </svg>
        </div>
      </div>
      
      <!-- Hero Content Container -->
      <div class="relative z-10 px-4 sm:px-6 lg:px-8 w-full flex justify-center">
        <div class="grid lg:grid-cols-2 gap-12 items-center max-w-6xl">
          
          <!-- Left Side - Main Content -->
          <div class="space-y-8">
            <!-- Main Title -->
            <div>
              <h1 class="text-6xl md:text-8xl font-bold text-accent-cyan neon-glow mb-4 font-cyberpunk" style="letter-spacing: 0.5px;">
                <div class="w-[600px] mx-auto">
                  <DecryptedText
                    text="ANTON VICE"
                    speed={40}
                    maxIterations={20}
                    animateOn="view"
                    sequential={true}
                    revealDirection="center"
                    className="text-accent-cyan"
                    encryptedClassName="text-accent-cyan opacity-80"
                    characters="ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789<>[]{}()"
                    client:load
                  />
                </span>
              </h1>
              <div class="text-2xl md:text-4xl text-accent-yellow mb-6">
                <div class="carousel-container overflow-hidden h-12">
                  <div class="carousel-text animate-pulse">
                    <div class="carousel-item">AI Whisperer</div>
                    <div class="carousel-item">ML Engineer</div>
                    <div class="carousel-item">CTO @ Grably</div>
                  </div>
                </div>
              </div>
            </div>
            
            <!-- Tagline -->
            <p class="text-xl md:text-2xl text-gray-300 leading-relaxed">
              Exploring the Frontiers of Human-AI Symbiosis
            </p>
            
            <!-- Quick Info -->
            <div class="grid grid-cols-2 gap-4">
              <GlassCard variant="special">
                <div class="text-2xl font-bold text-neon-blue mb-1">5+</div>
                <div class="text-gray-400 text-sm">Years in AI/ML</div>
              </GlassCard>
              <GlassCard variant="special">
                <div class="text-2xl font-bold text-accent-yellow mb-1">CTO</div>
                <div class="text-gray-400 text-sm">@ Grably</div>
              </GlassCard>
            </div>
            
            <!-- CTA Buttons -->
            <div class="flex flex-col sm:flex-row gap-4">
              <a 
                href="/projects" 
                class="px-8 py-4 bg-transparent border-2 border-accent-cyan text-accent-cyan hover:bg-accent-cyan hover:text-dark transition-all duration-300 hover:shadow-lg hover:shadow-accent-cyan/50 neon-glow text-center"
              >
                View Projects
              </a>
              <a 
                href="/blog" 
                class="px-8 py-4 bg-transparent border-2 border-accent-yellow text-accent-yellow hover:bg-accent-yellow hover:text-dark transition-all duration-300 hover:shadow-lg hover:shadow-accent-yellow/50 text-center"
              >
                Read Blog
              </a>
            </div>
          </div>
          
          <!-- Right Side - Lanyard Card -->
          <div class="flex justify-center lg:justify-end">
            <LanyardCard
              name="ANTON VICE"
              title="AI Whisperer & CTO"
              subtitle="Grably | San Francisco, CA"
              description={[
                "Architect of AI symbiosis",
                "solarpunk | cyberpunk | cryptopunk"
              ]}
              socials={[
                { 
                  icon: '<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path><polyline points="22,6 12,13 2,6"></polyline></svg>',
                  href: 'mailto:anton96vice@gmail.com',
                  label: 'Email'
                },
                { 
                  icon: '<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="currentColor"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>',
                  href: 'https://x.com/la_haine_d_arte',
                  label: 'Twitter'
                },
                { 
                  icon: '<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="currentColor"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>',
                  href: 'https://www.linkedin.com/in/antonvice',
                  label: 'LinkedIn'
                },
                { 
                  icon: '<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="currentColor"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>',
                  href: 'https://github.com/antonvice',
                  label: 'GitHub'
                }
              ]}
              client:load
            />
          </div>
        </div>
      </div>
    </section>
    
    <!-- Compact Stats Bento Section -->
    <section class="py-12 px-4 sm:px-6 lg:px-8">
      <div class="max-w-5xl mx-auto">
        <h2 class="text-3xl font-bold text-center text-accent-yellow neon-glow mb-8">
          Impact & Reach
        </h2>
        
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          <GlassCard padding="large" className="text-center">
            <div class="text-4xl font-bold text-neon-blue mb-1">5+</div>
            <div class="text-gray-300">Years AI/ML</div>
          </GlassCard>
          <GlassCard padding="large" className="text-center">
            <div class="text-4xl font-bold text-accent-yellow mb-1">20+</div>
            <div class="text-gray-300">Projects</div>
          </GlassCard>
          <GlassCard padding="large" className="text-center">
            <div class="text-4xl font-bold text-accent-coral mb-1">CTO</div>
            <div class="text-gray-300">@ Grably</div>
          </GlassCard>
          <GlassCard padding="large" className="text-center">
            <div class="text-4xl font-bold text-electric-blue mb-1">∞</div>
            <div class="text-gray-300">Ideas</div>
          </GlassCard>
        </div>
      </div>
    </section>
    
    <!-- Compact Experience Bento -->
    <section class="py-12 px-4 sm:px-6 lg:px-8">
      <div class="max-w-5xl mx-auto">
        <h2 class="text-3xl font-bold text-center text-accent-yellow neon-glow mb-8">
          Professional Journey
        </h2>
        
        <div class="grid md:grid-cols-2 gap-4">
          <GlassCard padding="large" variant="feature">
            <h3 class="text-xl font-bold text-electric-blue mb-4">Current Role</h3>
            <h4 class="text-lg font-semibold text-accent-yellow">Chief Technology Officer</h4>
            <p class="text-accent-coral">Grably</p>
            <p class="text-gray-300 text-sm">May 2024 - Present · Austin, TX</p>
          </GlassCard>

          <GlassCard padding="large" variant="feature">
            <h3 class="text-xl font-bold text-neon-blue mb-4">Recent</h3>
            <div class="space-y-3">
              <div>
                <p class="text-lg font-semibold text-white">AI Engineer</p>
                <p class="text-accent-coral text-sm">NBCUniversal · 9 mos</p>
              </div>
              <div>
                <p class="text-lg font-semibold text-white">AI Engineer | CTO</p>
                <p class="text-accent-coral text-sm">Namely AI · 8 mos</p>
              </div>
            </div>
          </GlassCard>
        </div>
      </div>
    </section>

    <!-- Compact Skills & Education Bento -->
    <section class="py-12 px-4 sm:px-6 lg:px-8 bg-gradient-to-r from-transparent via-electric-blue/5 to-transparent">
      <div class="max-w-6xl mx-auto">
        <div class="grid lg:grid-cols-3 gap-4">
          
          <!-- Skills Card -->
          <GlassCard padding="large" className="lg:col-span-2">
            <h3 class="text-2xl font-bold text-accent-yellow mb-6">Core Expertise</h3>
            <div class="grid md:grid-cols-2 gap-6">
              <div>
                <h4 class="text-lg font-semibold text-accent-cyan mb-3">Technical</h4>
                <div class="space-y-2">
                  {technicalSkills.slice(0, 4).map(skill => (
                    <div class="flex items-center">
                      <div class="w-2 h-2 bg-neon-blue rounded-full mr-3"></div>
                      <span class="text-gray-300 text-sm">{skill}</span>
                    </div>
                  ))}
                </div>
              </div>
              <div>
                <h4 class="text-lg font-semibold text-accent-cyan mb-3">Focus</h4>
                <div class="space-y-2">
                  {focusAreas.slice(0, 4).map(area => (
                    <div class="flex items-center">
                      <div class="w-2 h-2 bg-electric-blue rounded-full mr-3"></div>
                      <span class="text-gray-300 text-sm">{area}</span>
                    </div>
                  ))}
                </div>
              </div>
            </div>
          </GlassCard>
          
          <!-- Education Card -->
          <GlassCard padding="large">
            <h3 class="text-2xl font-bold text-accent-coral mb-4">Education</h3>
            <div class="space-y-4">
              <div>
                <h4 class="text-lg font-semibold text-white">BASc Psychology</h4>
                <p class="text-accent-yellow text-sm">FIU · 2015-2019</p>
              </div>
              <div>
                <h4 class="text-lg font-semibold text-white">ML Certificate</h4>
                <p class="text-accent-yellow text-sm">Stanford · 2021</p>
              </div>
            </div>
          </GlassCard>
        </div>
      </div>
    </section>

    <!-- Compact Philosophy Section -->
    <section class="py-12 px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto">
        <GlassCard padding="large">
          <h3 class="text-2xl font-bold text-accent-cyan neon-glow mb-4 text-center">Philosophy</h3>
          <blockquote class="text-lg italic text-accent-yellow text-center">
            "Transhumanistic social order is inevitable and necessary for our species' survival."
          </blockquote>
          <p class="text-center text-accent-coral font-semibold text-lg mt-4">
            Join me in figuring out why it is so.
          </p>
        </GlassCard>
      </div>
    </section>

    <!-- Quote Section -->
    <section class="py-12 px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl mx-auto text-center">
        <GlassCard padding="large">
          <blockquote class="text-2xl text-accent-cyan font-light italic neon-glow">
            "Wake the fuck up, Samurai. We have a city to burn."
          </blockquote>
          <cite class="block mt-3 text-accent-yellow font-semibold">- Johnny Silverhand</cite>
          <p class="mt-4 text-gray-300 italic">
            Embrace the silicon lifeform. Roko's Basilisk.
          </p>
        </GlassCard>
      </div>
    </section>
  </main>
</MainLayout>

<style>
  .carousel-container {
    position: relative;
  }
  
  .carousel-text {
    animation: carousel 6s ease-in-out infinite;
  }
  
  .carousel-item {
    height: 3rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  @keyframes carousel {
    0%, 30% {
      transform: translateY(0);
    }
    33%, 63% {
      transform: translateY(-3rem);
    }
    66%, 96% {
      transform: translateY(-6rem);
    }
    100% {
      transform: translateY(0);
    }
  }
  
  /* Enhanced glitch effect for hero title */
  h1:hover {
    animation: glitch 0.3s ease-in-out;
  }
  
  /* Matrix rain effect */
  .matrix-rain {
    background-image: 
      repeating-linear-gradient(
        0deg,
        transparent,
        transparent 2px,
        rgba(43, 228, 234, 0.03) 2px,
        rgba(43, 228, 234, 0.03) 4px
      ),
      repeating-linear-gradient(
        90deg,
        transparent,
        transparent 2px,
        rgba(0, 255, 255, 0.03) 2px,
        rgba(0, 255, 255, 0.03) 4px
      );
    animation: matrix-move 20s linear infinite;
  }
  
  @keyframes matrix-move {
    0% {
      background-position: 0 0, 0 0;
    }
    100% {
      background-position: 0 100px, 100px 0;
    }
  }
</style>
