---
import MainLayout from '../layouts/MainLayout.astro';
import ProjectCard from '../components/ProjectCard';
import GitHubStats from '../components/GitHubStats';
import MagicBento from '../components/MagicBento';
import DecryptedText from '../components/DecryptedText';
import GlassCard from '../components/GlassCard';
import { githubService } from '../lib/github';

// Fetch all repositories sorted and categorized at build time
const { pinned, featured, others, all } = await githubService.getAllRepositoriesSorted();
const formattedAll = all.map(repo => githubService.formatRepository(repo));
---

<MainLayout title="Projects - Anton Vice">
  
  <main id="main-content" class="pt-16">
    <!-- Hero Section -->
    <section class="py-12 px-4 sm:px-6 lg:px-8 bg-gradient-to-b from-dark via-dark/95 to-dark relative overflow-hidden">
      <div class="max-w-6xl mx-auto relative z-10">
        <div class="text-center mb-8">
          <h1 class="text-5xl md:text-6xl font-bold text-electric-blue electric-blue-glow mb-4 font-cyberpunk" style="letter-spacing: 0.5px; min-width: max-content;">
            <DecryptedText 
              text="PROJECTS & CODE"
              speed={40}
              maxIterations={20}
              animateOn="view"
              sequential={true}
              revealDirection="center"
              className="text-electric-blue"
              encryptedClassName="text-electric-blue opacity-80"
              characters="ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789<>[]{}()"
              client:load
            />
          </h1>
          <p class="text-lg text-gray-300 max-w-2xl mx-auto leading-relaxed mb-6">
            {all.length} repositories • AI/ML • Open Source • Experimental Work
          </p>
          <div class="flex justify-center gap-3 flex-wrap">
            <a 
              href="https://github.com/antonvice" 
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center px-6 py-3 border-2 border-accent-yellow text-accent-yellow hover:bg-accent-yellow hover:text-dark transition-all duration-300 hover:shadow-lg hover:shadow-accent-yellow/50 neon-glow"
            >
              <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
              GitHub Profile
            </a>
            <a 
              href="#github-stats"
              class="inline-flex items-center px-6 py-3 border-2 border-accent-cyan text-accent-cyan hover:bg-accent-cyan hover:text-dark transition-all duration-300 hover:shadow-lg hover:shadow-accent-cyan/50"
            >
              <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 24 24">
                <path d="M3 13h8V3H3v10zm0 8h8v-6H3v6zm10 0h8V11h-8v10zm0-18v6h8V3h-8z"/>
              </svg>
              Statistics
            </a>
          </div>
        </div>
        
        <!-- Tech Stack (moved to top) -->
        <div class="mt-8">
          <h3 class="text-xl font-bold text-neon-blue mb-4 text-center">Tech Stack</h3>
          <div class="flex flex-wrap justify-center gap-3">
            {[
              { name: 'Python', color: '#3776ab' },
              { name: 'TypeScript', color: '#3178c6' },
              { name: 'React', color: '#61dafb' },
              { name: 'PyTorch', color: '#ee4c2c' },
              { name: 'TensorFlow', color: '#ff6f00' },
              { name: 'FastAPI', color: '#009688' },
              { name: 'Docker', color: '#2496ed' },
              { name: 'AWS', color: '#ff9900' },
              { name: 'Node.js', color: '#339933' },
              { name: 'PostgreSQL', color: '#336791' },
              { name: 'Redis', color: '#dc382d' },
              { name: 'Kubernetes', color: '#326ce5' },
            ].map((tech) => (
              <GlassCard 
                key={tech.name}
                className="inline-flex items-center gap-2 px-4 py-2 hover:scale-105 transition-all duration-300 hover:border-electric-blue/30"
              >
                <div 
                  class="w-3 h-3 rounded-full"
                  style={`background-color: ${tech.color}`}
                ></div>
                <span class="text-sm text-gray-300">{tech.name}</span>
              </GlassCard>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- GitHub Statistics Section -->
    <section id="github-stats" class="py-12 px-4 sm:px-6 lg:px-8 bg-gradient-to-b from-transparent via-accent-coral/5 to-transparent">
      <div class="max-w-6xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold text-center text-neon-blue neon-glow mb-8 font-cyberpunk">
          GitHub Statistics
        </h2>
        <GitHubStats client:load />
      </div>
    </section>

    <!-- All Projects Section with MagicBento -->
    <section class="py-12 px-4 sm:px-6 lg:px-8">
      <div class="max-w-7xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold text-center text-accent-cyan mb-8 font-cyberpunk">
          <DecryptedText 
            text="ALL PROJECTS"
            speed={30}
            maxIterations={15}
            animateOn="view"
            sequential={true}
            revealDirection="start"
            className="text-accent-cyan"
            encryptedClassName="text-accent-cyan opacity-70"
            characters="ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789#@$%&"
            client:load
          />
        </h2>
        
        {formattedAll.length > 0 && (
          <MagicBento
            projects={formattedAll}
            textAutoHide={false}
            enableStars={true}
            enableSpotlight={true}
            enableBorderGlow={true}
            enableTilt={true}
            enableMagnetism={true}
            clickEffect={true}
            spotlightRadius={350}
            particleCount={10}
            glowColor="46, 228, 234"
            client:load
          />
        )}
      </div>
    </section>

    {all.length === 0 && (
      <section class="py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-md mx-auto text-center">
          <GlassCard padding="large">
            <h3 class="text-2xl text-accent-yellow mb-4">Loading Projects...</h3>
            <p class="text-gray-400 mb-6">
              Fetching repositories from GitHub...
            </p>
            <a 
              href="https://github.com/antonvice" 
              target="_blank"
              rel="noopener noreferrer"
              class="inline-block px-6 py-3 border border-accent-cyan text-accent-cyan hover:bg-accent-cyan hover:text-dark transition-all duration-300"
            >
              Visit GitHub Profile
            </a>
          </GlassCard>
        </div>
      </section>
    )}
  </main>
</MainLayout>